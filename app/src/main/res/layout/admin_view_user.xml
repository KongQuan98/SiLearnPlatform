<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/Linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headerbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_account_circle_24" />

            <TextView
                android:id="@+id/nameTitle"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/profileImage"
                android:includeFontPadding="false"
                android:text="Name: "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/nameTitle"
                android:layout_below="@id/profileImage"
                android:includeFontPadding="false"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/emailTitle"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:text="Email: "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/emailTitle"
                android:includeFontPadding="false"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orgTitle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:text="Organization: "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/org"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:layout_below="@id/email"
                android:layout_toRightOf="@id/orgTitle"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/typeTitle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/org"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:text="User Type: "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userType"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/org"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/typeTitle"
                android:includeFontPadding="false"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/editMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:text="Edit"/>


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>