        <activity android:name=".LoginActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".CameraActivityBack" />
        <activity android:name=".LearningVideo" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".LandingPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ErrorClass" />
        <activity android:name=".CommunityClass" />
        <activity android:name=".LearningClass" />
        <activity android:name=".RecognitionClass" />
        <activity android:name=".MainActivity" />
